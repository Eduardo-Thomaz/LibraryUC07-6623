@model Usuario
@{
    ViewData["Title"] = "Cadastro de Usuários";
}

<h1 class="row justify-content-md-center">Cadastro de Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="CadastrarUsuario" method="POST" class="col-md-4">
        <fieldset>
            <legend>Dados para cadastro</legend>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" required/>
            </div>
            
            <div class="form-group">
                <label asp-for="Tipo">Tipo</label>
                <select asp-for="Tipo" class="form-control" required>
                    <option value="@Usuario.ADMIN">Usuário administrativo</option>
                    <option value="@Usuario.PADRAO">Usuário padrão</option>
                </select>
            </div>
        </fieldset>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>