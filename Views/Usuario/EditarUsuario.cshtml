@model Usuario
@{
    ViewData["Title"] = "Edição de Usuários";
}

<h1 class="row justify-content-md-center">Edição de Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="EditarUsuario" method="POST" class="col-md-4">
        <fieldset>
            <legend>Dados para edição</legend>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input type="password" asp-for="Senha" class="form-control"/>
            </div>
           
            <div class="form-group">
                <label asp-for="Tipo">Tipo</label>
                <select asp-for="Tipo" class="form-control">
                    <option value="@Usuario.ADMIN">Usuário administrativo</option>
                    <option value="@Usuario.PADRAO">Usuário padrão</option>
                </select>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id"/>
            </div>
        </fieldset>
        <input type="submit" value="Salvar mudanças" class="btn btn-primary"/>
    </form>
</div>